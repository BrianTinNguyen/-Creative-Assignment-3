        }

        .postcontainer {
            padding: 20px;
            border: 1px solid #000;
            margin-bottom: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, .2);
            border-radius: 10px;
        }

        .userone {
            padding: 10px;
        }

        .contentone {
            padding: 10px;
        }

        .userone{
            font-weight: bold;
            font-size: larger;
        }

        .likestime{
            gap: 100px;
        }

        .contentone{
            border-bottom: 1px solid black;
            padding: 20px;
        }

        .titles{
            text-align: center;
            font-weight: bold;
        }

        .comments{
            margin-left: 18%;
        }

